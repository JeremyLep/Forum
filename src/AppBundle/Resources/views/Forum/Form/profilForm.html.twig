{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	{{ form_errors(form) }}

	<div class="form-group">
		{{ form_label(form.sujet, "Sujet de l'email", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
		{{ form_errors(form.sujet) }}
		<div class="col-sm-12">
		  	{{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.contenu, "Contenu de l'email", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
		{{ form_errors(form.contenu) }}
		<div class="col-sm-12">
		    {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': '10'}}) }}
		</div>
	</div>

	{{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}

	{{ form_rest(form) }}
		  
{{ form_end(form) }}