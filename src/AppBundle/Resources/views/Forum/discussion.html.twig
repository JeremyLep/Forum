{% extends "AppBundle::layout.html.twig" %}

{% block title %}
<div class="pull-left m-r-md mr-5">
    <i class="fa fa-shield text-navy mid-icon"></i>
</div>
<h2> {{ theme }}</h2>
<small class="forum-desc"> {{ infosDisc[0]['nb_discussion'] }} posts - {{ infosDisc[0]['COUNT(distinct d.auteur_id)'] }} participents</small>
{% endblock %}

{# "nb_discussion"]=> string(1) "3" ["COUNT(distinct d.auteur_id)"]=> string(1) "2" } } #}

{% block content %}
{% for discussion in discussions %}
<div class="ibox-content forum-container mb-2">
<div class="col-12">
	<div class="row pb-3" style="border-bottom: 0.0625rem dotted #C6C6D0;">
		<div class="col-1">
			<img src="{{  asset('bundles/app/images/defaut.png') }}" style="max-width: 40px; max-height: 40px;">
		</div>
		<div class="col-11">
			<div class="row">
				<h5>{{ discussion.pseudo }}</h5>
			</div>
			<div class="row">
				<small class="forum-desc">{{ discussion.date }}</small>
			</div>
		</div>
	</div>
	<div class="row pt-3">
		<div class="col-12">
			<h6>{{ discussion.contenu }}</h6>
		</div>
	</div>
</div>
</div>
{% endfor %}
{% endblock %}