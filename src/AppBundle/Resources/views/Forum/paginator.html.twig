<ul class="pagination m-0 pl-4">
  {% for p in range(1, nbPages) %}
    <li class="pagination-item {% if p == page %} active {% endif %}">
    	{% if app.request.get('_route') == 'app_home' %}
      		<a class="pagination-link" href="{{ path(app.request.get('_route'), {'page': p}) }}">{{ p }}</a>
		{% endif %}
		{% if app.request.get('_route') == 'app_discussion' %}
			<a class="pagination-link" href="{{ path(app.request.get('_route'), {'page': p, 'theme': theme}) }}">{{ p }}</a>
		{% endif %}
    </li>
  {% endfor %}
</ul>